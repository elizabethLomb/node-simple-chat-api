{
  "env": {
    "commonjs": true,
    "es2020": true,
    "node": true,
    "jest": true,
    "mongo": true
  },
  "extends": [
		"standard",
		"eslint:recommended",
		"plugin:prettier/recommended"
	],
  "parserOptions": {
    "ecmaVersion": 11
	},
	"plugins": [
		"prettier"
	],
  "rules": {
		"indent": ["error", 2],
		"prettier/prettier": "error"
  }
}
